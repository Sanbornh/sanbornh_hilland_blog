<head profile="http://gmpg.org/xfn/11">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= h(page_title) %></title>
  <%= stylesheet_link_tag "/stylesheets/theme/bootstrap.min.css", "/stylesheets/theme/style.css", "/stylesheets/user-style.css", :media => 'all' %>  
  <%= render 'shared/page_header' %>
  <style type="text/css">
      #logo { background: url(<%= File.join(this_blog.base_url, "images", "theme", "bg#{Random.rand(2) + 1}.jpg") %>) top left no-repeat; }
  </style>
</head>
<body>
   <nav>
    <ul>
      <div>
        <%= link_to this_blog.base_url do  %>
          <li id="blog-btn" data-color="blue">Blog</li>
        <% end %>
      </div>
      <div>
        
          <li id="about-btn" data-color="red">About</li>
        
      </div>
      <div><a href="#"><li id="projects-btn" data-color="green">Projects</li></a></div>
      <li>
        <a href="https://www.twitter.com/Sanbornh"><i class="fa fa-twitter"></i></a>
        <a href="https://www.linkedin.com/pub/sanborn-hilland/7a/984/788"><i class="fa fa-linkedin"></i></a>
        <a href="https://github.com/Sanbornh"><i class="fa fa-github"></i></a>
      </li>
    </ul>
  </nav>

  <div class="content-wrapper">
    <div class="clear-fix"></div>
    <div class="content">
      <%= yield %>
      <div class='span10'>
        <%- if controller.controller_name == 'articles' and controller.action_name.include? 'index' %>
          <h1><%= link_to(this_blog.blog_name, this_blog.base_url) %></h1>
        <%- else %>
            <p id='title'><%= link_to(this_blog.blog_name, this_blog.base_url) %></p>
        <%- end %>
          <p class='subtitle'><%= this_blog.blog_subtitle %></p>
      </div>

      <ul class='nav'>
        <li><%= link_to(t('.home'), this_blog.base_url)%></li>
        <li><%= link_to(t('.statuses'), {:controller => 'notes'}) %></li>
        <%- Page.published.each do |page| %>
          <li><%= link_to_permalink(page, page.title) %></li>
        <%- end %>
      </ul>

      <p><small>Powered by <a href='http://publify.co'>Publify</a> – Thème <a href='http://t37.net'>Frédéric de Villamil</a></small></p>
    </div>
  </div>


